<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Simi_Simipwa::css/main.css"/>
    </head>
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="Simi\Simipwa\Block\Adminhtml\Device\Edit" name="device_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Simi\Simipwa\Block\Adminhtml\Device\Edit\Tabs" name="device_edit_tabs">
                <block class="Simi\Simipwa\Block\Adminhtml\Device\Edit\Tab\Main" name="device_edit_tab_main"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">device_edit_tab_main</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
